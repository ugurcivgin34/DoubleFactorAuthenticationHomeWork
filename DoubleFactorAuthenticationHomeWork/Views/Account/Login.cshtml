@using DoubleFactorAuthenticationHomeWork.ViemModels
@model LoginViewModel
@{
    ViewData["Title"] = "Giriş";
}

<div class="login-container">
    <h2 class="text-center">Giriş Yap</h2>
    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">E-posta</label>
            <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi girin" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifre</label>
            <input asp-for="Password" class="form-control" placeholder="Şifrenizi girin" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Beni hatırla</label>
        </div>
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Giriş Yap</button>
            <a asp-controller="Account" asp-action="Register" class="btn btn-secondary">Kayıt Ol</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
